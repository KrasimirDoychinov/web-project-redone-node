<form class="auth" action="login" method="post">
	<div class="auth-data">
		<label for="name">NAME</label>
		<div class="auth-input">
			<% if (data.name) { %>
			<input type="text" id="name" name="name" value="<%= data.name %>" />
			<% if (data.nameErrMsg) { %>
			<p><%= data.nameErrMsg %></p>
			<% } %> <% } else { %>
			<input type="text" id="name" name="name" />
			<% } %>
		</div>
	</div>
	<div class="auth-data">
		<label for="password">PASSWORD</label>
		<div class="auth-input">
			<% if (data.password) { %>
			<input
				type="password"
				id="password"
				name="password"
				value="<%= data.password %>"
			/>
			<% if (data.passErrMsg) { %>
			<p><%= data.passErrMsg %></p>
			<% } %> <% } else { %>
			<input type="password" id="password" name="password" />

			<% } %>
		</div>
	</div>
	<% if (data.generalErrMsg) { %>
	<p><%= data.generalErrMsg %></p>
	<% } %>
	<button type="submit" class="purple-btn">Login</button>
</form>
